<h1>Listing Companies</h1>
<%= link_to "New Company", new_company_path %>


  <style>
    table, th, td {
      border:1px solid black;
      text-align: center;
    }
  </style>
  <table style="width:100%">
    <tr>
      <th>Company Name </th>
      <th>Company Type </th>
      <th>Actions</th>
    </tr>
    <%- @companies.each do|company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.company_type %></td>
      <td><%= link_to "Show", company %>/<%= link_to "Edit", edit_company_path(company) %></td>
    </tr>

    <% end %>
  </table>
